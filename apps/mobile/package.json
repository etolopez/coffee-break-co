{
  "name": "@coffee-passport/mobile",
  "version": "1.0.0",
  "description": "Coffee Digital Passport - Expo React Native mobile application",
  "main": "expo-router/entry",
  "scripts": {
    "start": "EXPO_ROUTER_APP_ROOT=src/app npx expo start",
    "android": "EXPO_ROUTER_APP_ROOT=src/app npx expo start --android",
    "ios": "EXPO_ROUTER_APP_ROOT=src/app npx expo start --ios",
    "web": "EXPO_ROUTER_APP_ROOT=src/app npx expo start --web",
    "clean": "rm -rf node_modules package-lock.json .expo .metro",
    "clean:install": "npm run clean && npm install"
  },
  "dependencies": {
    "@expo/vector-icons": "^15.0.3",
    "axios": "^1.6.2",
    "expo": "^54.0.0",
    "expo-asset": "~12.0.9",
    "expo-barcode-scanner": "~14.0.0",
    "expo-camera": "~17.0.9",
    "expo-constants": "~18.0.10",
    "expo-device": "~8.0.9",
    "expo-font": "~14.0.9",
    "expo-haptics": "~15.0.7",
    "expo-image": "^3.0.10",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-router": "~6.0.14",
    "expo-status-bar": "~3.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-url-polyfill": "^1.3.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react": "~19.1.10",
    "typescript": "~5.9.2"
  }
}
