{
  "expo": {
    "name": "Coffee Break",
    "slug": "coffee-break",
    "version": "1.0.0",
    "scheme": "coffeebreak",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#FEF3C7"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.coffeebreak.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes on coffee packages.",
        "NSPhotoLibraryUsageDescription": "This app accesses your photo library to save coffee images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FEF3C7"
      },
      "package": "com.coffeebreak.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Coffee Break to access your camera to scan QR codes on coffee packages."
        }
      ],
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Allow Coffee Break to access your camera to scan QR codes."
        }
      ],
      "expo-font"
    ],
    "extra": {
      "router": {},
      "eas": {
        "projectId": "coffee-break-mobile-app"
      },
      "apiUrl": "https://coffee-break-co-production.up.railway.app"
    }
  }
}
