# Coffee Digital Passport - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://coffee_user:coffee_password@localhost:5432/coffee_passport

# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
JWT_ISSUER=https://auth.coffee.example
JWT_AUDIENCE=coffee-api
JWT_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----
MIIBIjANBgkqhkiG9w0BAQEFAAOCAQ8AMIIBCgKCAQEA...
-----END PUBLIC KEY-----
JWT_SECRET=your-jwt-secret-key-here

# ============================================================================
# HMAC VERIFICATION
# ============================================================================
HMAC_REQUIRED=true
HMAC_SECRET=your-hmac-secret-key-here

# ============================================================================
# OPENSEARCH
# ============================================================================
OPENSEARCH_URL=http://localhost:9200
OPENSEARCH_USERNAME=
OPENSEARCH_PASSWORD=

# ============================================================================
# CLICKHOUSE
# ============================================================================
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USERNAME=coffee_user
CLICKHOUSE_PASSWORD=coffee_password
CLICKHOUSE_DATABASE=coffee_passport

# ============================================================================
# S3 STORAGE (MinIO)
# ============================================================================
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=coffee-passport
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_FORCE_PATH_STYLE=true

# ============================================================================
# CLOUDFLARE WORKER
# ============================================================================
WORKER_PUBLIC_API=http://localhost:3000
WORKER_WEB_ORIGIN=http://localhost:3001

# ============================================================================
# REGION & COMPLIANCE
# ============================================================================
REGION=ca-central-1
DATA_RESIDENCY=ca-central-1

# ============================================================================
# MONITORING & TELEMETRY
# ============================================================================
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=coffee-passport-api
OTEL_SERVICE_VERSION=1.0.0

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true
DEBUG_MODE=true

